{
    "compilerOptions": {

        // reasonable options
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "rootDir": "src",
        "lib": [
            "dom",
            "dom.iterable",
            "es2015",
            "es2016.array.include",
            "es2017.object"
        ],
        "downlevelIteration": true,
        "noEmit": true,

        // weird options
        // see: https://github.com/Microsoft/TypeScript-React-Starter/issues/8
        "allowSyntheticDefaultImports": true
    }
}